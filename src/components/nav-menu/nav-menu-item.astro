---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"li"> {
  href?: string;
}

const { href, class: className, ...rest } = Astro.props;
---

<li {...rest}>
  {
    href ? (
      <a
        href={href}
        class:list={[
          "block px-4 py-2 text-sm text-foreground hover:bg-muted focus:bg-muted focus:outline-none",
          className
        ]}
      >
        <slot />
      </a>
    ) : (
      <div class:list={["px-4 py-2 text-sm", className]}>
        <slot />
      </div>
    )
  }
</li>

---
// https://github.com/jonasmerlin/astro-seo#readme

import seo from "@/data/site.json";
import { SEO } from "astro-seo";
import { Schema } from "astro-seo-schema";

interface SEOLink {
  rel: string;
  href: string;
  type?: string;
}

interface SEOMeta {
  name: string;
  content: string;
  media?: string;
}

interface SchemaAddress {
  "@type": string;
  streetAddress: string;
  addressLocality: string;
  addressRegion: string;
  postalCode: string;
  addressCountry: {
    "@type": string;
    name: string;
  };
}

interface SchemaLocation {
  "@type": string;
  streetAddress: string;
  addressLocality: string;
  addressRegion: string;
  postalCode: string;
  telephone: string;
  addressCountry: {
    "@type": string;
    name: string;
  };
}

export interface HeadProps {
  title?: string;
  type?: string;
  description?: string;
  keywords?: string;
  image?: {
    url: string;
    secureUrl?: string;
    alt?: string;
    width?: number;
    height?: number;
    type?: string;
  };
  links?: SEOLink[];
  meta?: SEOMeta[];
  url?: string;
  locale?: string;
  siteName?: string;
  telephone?: string;
  address?: SchemaAddress;
  location?: SchemaLocation;
}

interface Props extends HeadProps {}

const {
  title,
  type,
  description,
  url,
  image,
  keywords,
  links,
  locale,
  meta,
  siteName,
  telephone,
  address,
  location
} = Astro.props;
---

<head>
  <SEO
    titleTemplate={`%s | ${seo.siteName || siteName}`}
    title={seo.title || title}
    charset="UTF-8"
    description={seo.description || description}
    openGraph={{
      basic: {
        title: seo.title || title || "",
        type: seo.type || type || "",
        url: seo.url || url || "",
        image: seo.image.url || image?.url || ""
      },
      image: seo.image || image,
      optional: {
        description: seo.description || description,
        locale: seo.locale || locale,
        siteName: seo.siteName || siteName
      }
    }}
    extend={{
      link: seo.links || links,
      meta: [
        { name: "description", content: seo.description || description },
        { name: "generator", content: Astro.generator },
        {
          name: "keywords",
          content: seo.keywords || keywords
        },
        ...(Array.isArray(seo.meta) ? seo.meta : []),
        ...(Array.isArray(meta) ? meta : [])
      ]
    }}
  />
  <Schema
    item={{
      "@context": "https://schema.org",
      "@id": seo.url || url,
      "@type": "Corporation",
      name: seo.siteName || siteName,
      logo: "https://placehold.co/1200x630",
      telephone: seo.telephone || telephone,
      priceRange: "N/A",
      url: seo.url || url,
      image: seo.image.url || image?.url || "",
      contactPoint: {
        "@type": "ContactPoint",
        telephone: seo.telephone || telephone,
        contactType: "technical support",
        areaServed:
          seo.address?.addressCountry.name || address?.addressCountry.name,
        availableLanguage: [seo.locale || locale || "en"]
      }
    }}
  />
</head>

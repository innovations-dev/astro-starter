---
import Layout from '../layouts/root-layout.astro';
import { headerVariants } from '../components/structure/header/header';
---

<Layout title="Animation Demo">
  <main class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6">Tailwind CSS Animate Demo</h1>
    <p class="mb-8">Scroll down to see the animations in action.</p>

    {Array.from({ length: 5 }).map((_, index) => (
      <div class="mb-32">
        <section class="mb-16">
          <h2 class="text-2xl font-semibold mb-4">Fade Animations</h2>
          <div class="flex flex-col space-y-4 sm:flex-row sm:space-x-4 sm:space-y-0">
            <div class="animate-in fade-in timeline p-4 bg-blue-500 text-white">Fade In</div>
            <div class="animate-in fade-in slide-in-from-top-10  timeline p-4 bg-green-500 text-white">Fade In Up</div>
            <div class="animate-in fade-in slide-in-from-bottom-10 timeline p-4 bg-red-500 text-white">Fade In Down</div>
          </div>
        </section>

        <section class="mb-16">
          <h2 class="text-2xl font-semibold mb-4">Slide Animations</h2>
          <div class="flex flex-col space-y-4 sm:flex-row sm:space-x-4 sm:space-y-0">
            <div class="animate-in slide-in-from-top timeline p-4 bg-purple-500 text-white">Slide In From Top</div>
            <div class="animate-in slide-in-from-bottom timeline p-4 bg-yellow-500 text-white">Slide In From Bottom</div>
            <div class="animate-in slide-in-from-left timeline p-4 bg-pink-500 text-white">Slide In From Left</div>
          </div>
        </section>

        <section class="mb-16">
          <h2 class="text-2xl font-semibold mb-4">Zoom Animations</h2>
          <div class="flex flex-col space-y-4 sm:flex-row sm:space-x-4 sm:space-y-0">
            <div class="animate-in zoom-in timeline p-4 bg-indigo-500 text-white">Zoom In</div>
            <div class="animate-in zoom-in-150 timeline p-4 bg-teal-500 text-white">Zoom In 50%</div>
            <div class="animate-in zoom-in-150 timeline p-4 bg-orange-500 text-white">Zoom In 150%</div>
          </div>
        </section>
      </div>
    ))}

    <section class="mb-16">
      <h2 class="text-2xl font-semibold mb-4">Spin and Ping Animations</h2>
      <div class="flex flex-col space-y-4 sm:flex-row sm:space-x-4 sm:space-y-0 items-center">
        <div class="animate-spin h-10 w-10 border-4 border-blue-500 border-t-transparent rounded-full"></div>
        <div class="animate-ping h-10 w-10 bg-green-500 rounded-full"></div>
        <div class="animate-bounce h-10 w-10 bg-red-500 rounded-full"></div>
      </div>
    </section>

    <section class="mb-64">
      <h2 class="text-2xl font-semibold mb-4">Custom Durations and Delays</h2>
      <div class="flex flex-col space-y-4 sm:flex-row sm:space-x-4 sm:space-y-0">
        <div class="animate-in fade-in duration-300 delay-300 p-4 bg-blue-500 text-white">Quick Fade (300ms)</div>
        <div class="animate-in fade-in duration-[2000ms] delay-[100ms] p-4 bg-green-500 text-white">Slow Fade (2s) with Delay (1s)</div>
      </div>
    </section>
  </main>
</Layout>
